<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="@android:color/white"
        tools:context=".ProfileActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/toppartikelprofile"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="200dp"
        android:src="@drawable/leftpartikelprofile"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/bottompartikelprofile"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="365dp"
        android:layout_height="260dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/kidsiconprofile"/>

    <TextView
        android:id="@+id/textViewScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Score : 1234 "
        android:layout_marginTop="140dp"
        android:layout_marginLeft="150dp"
        android:textSize="20sp"
        android:fontFamily="@font/nunitosans_bold"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_icon"
        android:text="Name   : Nur Aff"
        android:textSize="16sp"
        android:fontFamily="@font/nunitosans_bold"
        android:textColor="@android:color/black"
        android:layout_marginLeft="75dp"/>

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewName"
        android:text="Email    : NurAff@gmail.com"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:fontFamily="@font/nunitosans_bold"
        android:textColor="@android:color/black"
        android:layout_marginLeft="75dp"/>

    <TextView
        android:id="@+id/textViewGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewEmail"
        android:text="Gender : Female"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:fontFamily="@font/nunitosans_bold"
        android:textColor="@android:color/black"
        android:layout_marginLeft="75dp"/>

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textViewGender"
        android:layout_marginLeft="70dp"
        android:background="@drawable/logout"
        android:layout_marginTop="50dp"/>
</RelativeLayout>